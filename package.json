{
	"name": "github-release-from-cc-changelog",
	"version": "1.0.1",
	"description": "Create/update Github release notes from a CHANGELOG",
	"author": "Mariusz Nowak <medyk@medikoo.com> (https://www.medikoo.com/)",
	"keywords": [
		"conventional-commits",
		"github",
		"release",
		"github-release",
		"changelog"
	],
	"bin": {
		"github-release-from-cc-changelog": "./bin/github-release-from-cc-changelog.js",
		"github-release-all-from-cc-changelog": "./bin/github-release-all-from-cc-changelog.js"
	},
	"repository": "medikoo/gh-release-from-cc-changelog",
	"dependencies": {
		"@octokit/rest": "^16.28.2",
		"chalk": "^2.4.2",
		"cli-progress-footer": "^1.1.1",
		"essentials": "^1.0.0",
		"event-emitter": "^0.3.5",
		"minimist": "^1.2.0",
		"parse-github-url": "^1.0.2",
		"split2": "^3.1.1",
		"stream-promise": "^3.2.0",
		"type": "^1.0.1"
	},
	"devDependencies": {
		"chai": "^4.2.0",
		"eslint": "^5.16.0",
		"eslint-config-medikoo": "^2.4.0",
		"git-list-updated": "^1.2.0",
		"husky": "^2.4.1",
		"lint-staged": "^8.2.1",
		"mocha": "^6.1.4",
		"nyc": "^14.1.1",
		"prettier-elastic": "^1.18.2",
		"proxyquire": "^2.1.0",
		"sinon": "^7.3.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint"
		],
		"*.{css,html,js,json,md,yaml,yml}": [
			"prettier -c"
		]
	},
	"eslintConfig": {
		"extends": "medikoo/node",
		"root": true,
		"overrides": [
			{
				"files": "test/**/*.js",
				"env": {
					"mocha": true
				}
			},
			{
				"files": "test/_fixtures/**/*.js",
				"rules": {
					"camelcase": "off",
					"max-lines": "off"
				}
			}
		]
	},
	"nyc": {
		"all": true,
		"exclude": [
			"bin/**",
			"coverage/**",
			"test/**"
		]
	},
	"prettier": {
		"printWidth": 100,
		"tabWidth": 4,
		"overrides": [
			{
				"files": [
					"*.md"
				],
				"options": {
					"tabWidth": 2
				}
			}
		]
	},
	"scripts": {
		"check-coverage": "npm run coverage && nyc check-coverage --statements 80 --function 80 --branches 50 --lines 80",
		"coverage": "nyc --reporter=lcov --reporter=html --reporter=text-summary npm test",
		"lint": "eslint --ignore-path=.gitignore .",
		"lint-updated": "pipe-git-updated --ext=js -- eslint --ignore-pattern '!*'",
		"prettier-check-updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier -c",
		"prettify": "prettier --write --ignore-path .gitignore '**/*.{css,html,js,json,md,yaml,yml}'",
		"test": "mocha --recursive"
	},
	"license": "ISC"
}
