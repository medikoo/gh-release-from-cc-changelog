{
	"name": "github-release-from-cc-changelog",
	"version": "2.2.0",
	"description": "Create/update Github release notes from a CHANGELOG",
	"author": "Mariusz Nowak <medyk@medikoo.com> (https://www.medikoo.com/)",
	"keywords": [
		"conventional-commits",
		"github",
		"release",
		"github-release",
		"changelog"
	],
	"bin": {
		"dump-release-notes-from-cc-changelog": "./bin/dump-release-notes-from-cc-changelog.js",
		"github-release-from-cc-changelog": "./bin/github-release-from-cc-changelog.js",
		"github-release-all-from-cc-changelog": "./bin/github-release-all-from-cc-changelog.js"
	},
	"repository": "medikoo/gh-release-from-cc-changelog",
	"dependencies": {
		"@octokit/rest": "^18.12.0",
		"chalk": "^3.0.0",
		"cli-progress-footer": "^1.1.1",
		"essentials": "^1.2.0",
		"event-emitter": "^0.3.5",
		"minimist": "^1.2.5",
		"parse-github-url": "^1.0.2",
		"split2": "^3.2.2",
		"stream-promise": "^3.2.0",
		"type": "^2.5.0"
	},
	"devDependencies": {
		"chai": "^4.3.6",
		"eslint": "^8.7.0",
		"eslint-config-medikoo": "^4.1.1",
		"git-list-updated": "^1.2.1",
		"husky": "^4.3.8",
		"lint-staged": "^12.3.2",
		"mocha": "^7.2.0",
		"ncjsm": "^2.3.0",
		"nyc": "^14.1.1",
		"prettier-elastic": "^1.19.1",
		"process-utils": "^2.6.0",
		"sinon": "^7.5.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint"
		],
		"*.{css,html,js,json,md,yaml,yml}": [
			"prettier -c"
		]
	},
	"eslintConfig": {
		"extends": "medikoo/node/8",
		"root": true,
		"overrides": [
			{
				"files": "test/**/*.js",
				"env": {
					"mocha": true
				}
			},
			{
				"files": "test/_fixtures/**/*.js",
				"rules": {
					"camelcase": "off",
					"max-lines": "off"
				}
			}
		]
	},
	"nyc": {
		"all": true,
		"exclude": [
			".github",
			"coverage/**",
			"test/**",
			"*.config.js"
		],
		"reporter": [
			"lcov",
			"html",
			"text-summary"
		]
	},
	"prettier": {
		"printWidth": 100,
		"tabWidth": 4,
		"overrides": [
			{
				"files": [
					"*.md",
					"*.yml"
				],
				"options": {
					"tabWidth": 2
				}
			}
		]
	},
	"scripts": {
		"check-coverage": "npm run coverage && nyc check-coverage --statements 50 --function 50 --branches 40 --lines 50",
		"coverage": "nyc npm test",
		"lint": "eslint --ignore-path=.gitignore .",
		"lint:updated": "pipe-git-updated --base=main --ext=js -- eslint --ignore-pattern '!*'",
		"prettier-check": "prettier -c --ignore-path .gitignore \"**/*.{css,html,js,json,md,yaml,yml}\"",
		"prettier-check:updated": "pipe-git-updated --base=main --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier -c",
		"prettify": "prettier --write --ignore-path .gitignore \"**/*.{css,html,js,json,md,yaml,yml}\"",
		"prettify:updated": "pipe-git-updated --base=main --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier --write",
		"test": "mocha --recursive"
	},
	"engines": {
		"node": ">=8.0"
	},
	"license": "ISC"
}
